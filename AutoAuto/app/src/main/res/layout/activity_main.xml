<?xml version="1.0" encoding="utf-8"?>
<!-- activity_main.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/textView9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="AutoAuto"
        android:textColor="#FFFFFF"
        android:textSize="32sp" />

    <SearchView
        android:id="@+id/current_location_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12sp"
        android:background="@drawable/round_btn"
        android:queryHint="Enter current location"
        android:textColor="@color/black" />

    <SearchView
        android:id="@+id/dropping_location_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12sp"

        android:background="@drawable/round_btn"
        android:queryHint="Enter current location"
        android:textColor="@color/black" />

    <com.google.android.gms.maps.MapView
        android:background="@drawable/rounded_map_view"
        android:id="@+id/mapView"
        android:layout_width="match_parent"
        android:clipToOutline="true"
        android:layout_height="460dp"
        android:layout_marginTop="12sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <Button
        android:id="@+id/See"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12sp"
        android:background="@drawable/round_btn"
        android:text="Find Auto"
        android:textColor="#000000"
        android:textSize="20sp"
        app:backgroundTint="#F7F7F7" />

</LinearLayout>
