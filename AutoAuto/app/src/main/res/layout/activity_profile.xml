<?xml version="1.0" encoding="utf-8"?>
<!-- activity_profile.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Profile Picture -->
    <ImageView
        android:id="@+id/profile_picture"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_marginTop="12sp"
        tools:srcCompat="@drawable/person2" />

    <!-- User Name -->
    <TextView
        android:id="@+id/user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="12sp"
        android:text="User Name"
        android:textColor="#FFFFFF"
        android:textSize="34sp" />

    <!-- Edit Profile Button -->
    <Button
        android:id="@+id/profile_button"
        android:layout_width="375dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="14sp"
        android:background="@drawable/round_btn"
        android:text="Edit Profile"
        android:textColor="#000000"
        android:textSize="20sp"
        app:backgroundTint="#FCFCFC" />

    <!-- Name Section -->
    <LinearLayout
        android:id="@+id/name_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="14sp"
        android:clickable="true"
        android:focusable="true"
        android:padding="8dp">

        <!-- Label -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textColor="#FFFFFF"
            android:textSize="24sp"/>
        <!-- Value -->
        <TextView
            android:id="@+id/name_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Utkarsh"
            android:textColor="#CCCCCC"
            android:textSize="18sp" />
    </LinearLayout>

    <!-- Email Section -->
    <LinearLayout
        android:id="@+id/email_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="0sp"
        android:clickable="true"
        android:focusable="true"
        android:padding="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email"
            android:textColor="#FFFFFF"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/email_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="example@example.com"
            android:textColor="#CCCCCC"
            android:textSize="18sp" />
    </LinearLayout>

    <!-- Phone Section -->
    <LinearLayout
        android:id="@+id/edit_phone_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="0sp"
        android:clickable="true"
        android:focusable="true"
        android:padding="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phone"
            android:textColor="#FFFFFF"
            android:textSize="24sp" />
        <TextView
            android:id="@+id/text_phone_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+1 234 567 890"
            android:textColor="#CCCCCC"
            android:textSize="18sp" />
    </LinearLayout>

    <!-- Address Section -->
    <LinearLayout
        android:id="@+id/address_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="0sp"
        android:clickable="true"
        android:focusable="true"
        android:padding="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Address"
            android:textColor="#FFFFFF"
            android:textSize="24sp" />
        <TextView
            android:id="@+id/address_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="123 Main Street"
            android:textColor="#CCCCCC"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/gender_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="0sp"
        android:clickable="true"
        android:focusable="true"
        android:padding="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gender"
            android:textColor="#FFFFFF"
            android:textSize="24sp" />
        <TextView
            android:id="@+id/gender_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Male"
            android:textColor="#CCCCCC"
            android:textSize="18sp" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/edit_date_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="0sp"
        android:clickable="true"
        android:focusable="true"
        android:padding="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date of Birth"
            android:textColor="#FFFFFF"
            android:textSize="24sp" />
        <TextView
            android:id="@+id/date_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="dd-mm-yyyy"
            android:textColor="#CCCCCC"
            android:textSize="18sp" />
    </LinearLayout>

</LinearLayout>
